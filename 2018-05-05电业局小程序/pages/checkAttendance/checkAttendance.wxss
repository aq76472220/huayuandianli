/* 日历 */
.calendar{background: #fff}
.calendar-header{background: #00a5ff;padding-bottom: 10px; text-align: center}
.calendar-header picker{display: inline-block} 
.picker{text-align: center; background: url(data:image/png;base64,) no-repeat center bottom; padding-bottom: 15px; background-size: 18px;}
.week{display: flex; flex-wrap: wrap; flex-direction: row; justify-content: flex-start; min-height: 80rpx; line-height: 80rpx;}
.week-item{box-sizing: border-box; font-size: 14px; color: #666; text-align: center; width: 107.1428571428571rpx; }
.month{display: flex; flex-wrap: wrap; flex-direction: row; justify-content: flex-start;}
.month-item{box-sizing: border-box; font-size: 14px; color: #666; text-align: center; width: 107.1428571428571rpx; height: 107.1428571428571rpx; line-height: 120rpx;}
.month-item text{display: block; height: 25px;line-height: 25px; width: 25px; position: absolute; left: 50%;top: 50%; transform: translate(-50%,-50%); border-radius: 100px; color: #333}
